@model IEnumerable<DAL.Catering>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddCatering", "Service")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CateringTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CateringCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CateringDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CateringCost)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CateringTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CateringCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CateringDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CateringCost)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CateringId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CateringId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CateringId })
            </td>
        </tr>
    }

</table>


<br />
<p>
    @Html.ActionLink("Back to Service Manage Page", "Manage", "Service")
</p>