@model IEnumerable<DAL.Place>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddPlace", "Service")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlaceTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceCost)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceCost)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlaceId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlaceId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlaceId })
            </td>
        </tr>
    }

</table>

<br />
<p>
    @Html.ActionLink("Back to Service Manage Page", "Manage", "Service")
</p>