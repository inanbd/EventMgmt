
@model IEnumerable<DAL.OrderedFood>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FoodDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodCost)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @using (Html.BeginForm("DeleteService", "ServicesToEvent"))
            {

                @Html.AntiForgeryToken()
                <td>
                    @Html.DisplayFor(modelItem => item.FoodTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodCost)
                </td>
                <td><input type="hidden" name="foodid" value="@item.OFoodId" /></td>
                <td><input type="submit" value="Delete" class="btn btn-default" /></td>

            }

        </tr>
    }

</table>


