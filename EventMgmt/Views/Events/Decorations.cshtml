
@model IEnumerable<DAL.OrderedDecoration>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DecorationTitle)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DecorationDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecorationCost)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @using (Html.BeginForm("DeleteService", "ServicesToEvent"))
            {

                @Html.AntiForgeryToken()
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DecorationCost)
                </td>
                <td><input type="hidden" name="decid" value="@item.ODecorationId" /></td>
                <td><input type="submit" value="Delete" class="btn btn-default" /></td>
            }

        </tr>
    }

</table>
